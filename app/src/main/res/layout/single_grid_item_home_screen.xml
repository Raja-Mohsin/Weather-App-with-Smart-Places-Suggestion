<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="105dp"
        android:layout_height="125dp"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        android:backgroundTint="@color/card_fill_color"
        app:strokeWidth="2dp"
        app:strokeColor="@color/second_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:weightSum="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/singleGridItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Humidity"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/second_color"/>

            <ImageView
                android:id="@+id/singleGridItemIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:tint="@color/second_color"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/singleGridItemValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="47.7 g/kg"
                android:textSize="16sp"
                android:textColor="@color/second_color"
                android:gravity="center"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>